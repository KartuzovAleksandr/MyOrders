<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/top_academy"
            android:contentDescription="Логотип приложения"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"
            app:strokeColor="?attr/colorPrimary"
            app:strokeWidth="2dp" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="MyOrders"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Система управления заказами"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="Здесь вы можете просматривать товары, оформлять заказы и управлять ими.\n
            Данные генерируются случайным образом для демонстрации"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface" />

        <!-- Кнопка пересоздания данных -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonRegenerate"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="?attr/colorErrorContainer"
            android:textColor="?attr/colorOnErrorContainer"
            android:text="🔄 Пересоздать случайные данные"
            android:textAllCaps="false"
            app:cornerRadius="12dp" />

        <!-- Кнопка экспорта -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonExport"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="?attr/colorSecondaryContainer"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:text="📥 Экспортировать Orders.db и Orders.json"
            android:textAllCaps="false"
            app:cornerRadius="12dp" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="© Картузов Александр"
            android:textSize="18sp"
            android:textColor="@color/purple_500" />

    </LinearLayout>

</ScrollView>