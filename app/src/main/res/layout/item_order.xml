<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/textOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Заказ #1"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textOrderClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Клиент: Иван Иванов" />

        <TextView
            android:id="@+id/textOrderProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Товар: iPhone 15" />

        <TextView
            android:id="@+id/textOrderQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Кол-во: 2" />

        <TextView
            android:id="@+id/textOrderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дата: 01.01.2025" />

        <Button
            android:id="@+id/buttonDeleteOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Удалить"
            android:textSize="12sp"
            android:backgroundTint="@android:color/holo_red_light" />

    </LinearLayout>

</androidx.cardview.widget.CardView>